<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="holiday_form" model="ir.ui.view">
            <field name="name">holiday form</field>
            <field name="model">holiday</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="send_holiday" string="发假" type ="object" attrs="{'invisible':[('state', '=', 'done')]}" class="oe_highlight" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group string="">
                        <field name="employee_id"/>
                        <field name="employee_name" attrs="{'readonly': [('state', '=' , 'done')]}"/>
                        <field name="holiday_send_count" attrs="{'readonly': [('state', '=' , 'done')]}"/>
                        <button name="do_cancel" string="Cancel" type="object"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="holiday_tree" model="ir.ui.view">
            <field name="name">holiday tree</field>
            <field name="model">holiday</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="employee_name"/>
                    <field name="holiday_send_count"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft"/>

                </tree>
            </field>
        </record>
        <record id="action_holiday" model="ir.actions.act_window">
            <field name="name">Daily Module2</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">holiday</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_holiday_first" name="发假" sequence="2"/>
        <menuitem id="menu_holiday_second" name="发假" sequence="2" parent="menu_holiday_first"/>
        <menuitem id="menu_holiday_third" name="员工发假" sequence="2" parent ="menu_holiday_second" action="action_holiday"/>
    </data>
</openerp>